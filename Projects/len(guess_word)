import random

# Pick a word at random
word_list = ["loopy","heart","audio","laugh","trial", "zebra", "packs", "words", "hairs", "races", "grade"]
hidden_word = random.choice(word_list)
print ("WELCOME TO:")
print("WORDLE!!!")
print ("FYI - you have 6th guesses to guess the word also they are all lower case!!!")
print ("If you don't guess the word, YOU LOSE!")
print ()
print ("LET'S BEGIN!!!!")
print ()
print ()
print ()
print ("Please start when you are ready:")

# Repeat for 6 guesses
for i in range(6):
    # Guess a word
    guess_word = input()
    output = ""

    # First letter
    if guess_word[0] == hidden_word[0]:
        output += "ğŸŸ©"
    elif guess_word[0] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    # Second Letter
    if guess_word[1] == hidden_word[1]:
        output += "ğŸŸ©"
    elif guess_word[1] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    # Third Letter
    if guess_word[2] == hidden_word[2]:
        output += "ğŸŸ©"
    elif guess_word[2] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    # Fourth Letter
    if guess_word[3] == hidden_word[3]:
        output += "ğŸŸ©"
    elif guess_word[3] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"


    # Fifth Letter
    if guess_word[4] == hidden_word[4]:
        output += "ğŸŸ©"
    elif guess_word[4] in hidden_word:
        output += "ğŸŸ¨"
    else:
        output += "â¬›"

    # Result
    print(output)
    if output == "ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©":
        print("You win")
        print ("You got the word!!!")
        break
if output != "ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©ğŸŸ©":
    print ()
    print ("You lose")
    print (f"The word was {hidden_word}")

print(f"You used {i+1} guesses")